<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:background="#323232">

    <ImageView
        android:id="@+id/imgLabel"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        app:srcCompat="@drawable/no_label" />

    <TextView
        android:id="@+id/txt_beer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/anton"
        android:gravity="left"
        android:textColor="#FFBA00"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLabel"
        app:layout_constraintTop_toTopOf="@+id/imgLabel"
        tools:text="PAULANER" />

    <TextView
        android:id="@+id/txt_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textColor="#FFBA00"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imgLabel"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_name"
        tools:text="IBU: 34" />

    <TextView
        android:id="@+id/txt_ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textColor="#FFBA00"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txt_ibu"
        app:layout_constraintTop_toBottomOf="@+id/txt_beer_name"
        tools:text="ABV: 5" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLabel"
        app:layout_constraintTop_toBottomOf="@+id/txt_ibu"
        tools:text="This classic British Extra Special Bitter utilizes all British ingredients including Marris Otter Malt for a slightly malty and nutty finish" />

</android.support.constraint.ConstraintLayout>